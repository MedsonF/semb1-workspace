    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make all",
            "type": "shell",
            "options": {
                "cwd": "$(whorkspaceRoot)/11721EAU015-ATV2/scr"
            },
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "args": ["all"],
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern":[
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }

        },   
        
